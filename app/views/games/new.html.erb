<h1 class="title-center">New game</h1>
<div class="grid">
    <%@letters.each do |letter|%>
      <span class="letter"><%= letter %></span>
    <% end %>
</div>

<form action="/score" class="form-control">
  <p>What is the longest word you can find?</p>
  <input type="text" name="answer"><input type="submit" value="Play">
  <input type="hidden" name="valid_letters" value="<%= @letters.join %>">
</form>

<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
